<html>
    <head>
        <%= stylesheet_link_tag 'owner', media: 'all', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
        <div class="cont">
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th colspan="5" style="text-align:center;">Action</th>
                </tr>
                <% @owner_all.each do |owner| %>
                    <tr>
                        <td><%= owner.name%></td>
                        <td><%= owner.phone%></td>
                        <td><%= owner.status%></td>
                        <%if owner.status=="deactive"%>
                            <td><button type="button" class="btn" id="activate_button"><%= link_to 'Activate',activate_owner_path(owner),class: 'links'%></button></td>
                            <td><button type="button" class="btn disabled"><%= link_to 'Deactivate ','#',class: 'links',:html => {:disabled => true} %></button></td>     
                        <%else%>
                            <td><button type="button" class="btn disabled"><%= link_to 'Activate','#',class: 'links',:html => {:disabled => true} %></button></td>     
                            <td><button type="button" class="btn" id="deactivate_button"><%= link_to 'Deactivate',deactivate_owner_path(owner),class: 'links'%></button></td>
                        <%end%>
                        <td><button type="button" class="btn"><%= link_to 'View PGs', list_pg_building_path(owner.id),class: 'links'%></button></td>
                        <td><button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#editModal_<%= owner.id %>">Edit Owner</button></td>
                        <td><%= button_to 'Delete', owner_path(owner.id), method: :delete, data: { confirm: 'Are you sure?' },class:"btn" %></td>
                    </tr>
                    
                <% end %>
            </table>
        </div>
    </body>
</html>