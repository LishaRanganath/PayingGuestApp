<html>
    <head>
        <%= stylesheet_link_tag 'home', media: 'all', 'data-turbolinks-track': 'reload' %>
      
    </head>
    <body >

        <% if current_user %>
            <% if admin_log_in? %>
                <%= render partial: "admin"%>
                
            <%elsif owner_log_in? %>
                <%= render partial: "owner"%>

            <%else%>
                <h1>you are a <%= current_user.role %></h1>
                <% if current_user.customer.present? %>
                    <h1> your name is <%= current_user.customer.name %></h1>
                <% end %>
                <%= button_to 'LogOut', destroy_user_session_path, method: :delete %>
            <%end%>

        <% end %>
    </body>
