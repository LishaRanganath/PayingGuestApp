<%= stylesheet_link_tag 'edit_form'%>
<div class="edit-form-container">
<%= form_for(@room, url:  available_room_path(@room.id), method: :patch) do |form| %>
    <div class="field">
        <%= form.label :room_type_id, "Select Room Type", class: "label-text" %><br />
        <%= form.select :room_type_id, options_from_collection_for_select(@room.pg_building.room_types, 'id', 'name'), { prompt: 'Select Room Type' }, id: 'room-type-select',class: "field-space" %><br />
      </div>
      <br />
      <div class="field">
        <%= form.label :category_id, "Select Room Category", class: "label-text" %><br />
        <%= form.select :category_id, options_from_collection_for_select(@room.pg_building.categories, 'id', 'name'), { prompt: 'Select Category' }, id: 'category-select',class: "field-space" %><br />
      </div>
      
      <%= form.hidden_field :pg_building_id, value: @room.pg_building.id, id: 'building-id' %>
      
      <div class="field">
        <%= form.label :availability, "Room Availability", class: "label-text" %><br />
        <%= form.text_field :availability,class: "field-space"%>
      </div>
      <%= form.submit "Submit",class: "form-submit-btn"  %>
    <% end %>
</div>