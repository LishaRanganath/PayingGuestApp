<html>
  <head></head>
  <body>
      <%= form_with(model: Category.new, url: categories_path, method: :post) do |form| %>
        <div class="field">
          <%= form.label :name, "Room Category" %><br>
          <%= form.text_field :name %>
        </div>
        <%= form.hidden_field :pg_building_id, value: pg_building.id %>

        <div class="field">
          <%= form.label :price, "Cost" %><br>
          <%= form.text_field :price %>
        </div>

        <%= form.submit "Submit" %>
      <% end %>
        </div>
  </body>
</html>